<%- include('layouts/layout.top.ejs') %>

<table
  width="600px"
  class="table__main"
  align="center"
  cellpadding="0"
  cellspacing="0"
  bgcolor="white"
>
  <tr>
    <td>
      <p style="margin: 15px 0 12px 0; font-weight: bold; text-align: center">
        Confirm your Dome Email
      </p>
    </td>
  </tr>
  <tr>
    <td>
      <div>
        Hello <%= user.first_name %>. A request was made to change your Dome
        sign-in method to Email/Password and <%= user.auth_reset.email %> is the
        specified email address. Click the link below to complete the process.
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div style="margin: 12px 0 2px 0">
        <a
          href="<%= clientUrl %>/auth/change/<%= user.auth_reset.token %>?to=email&password"
          style="color: #000; font-size: 1em"
        >
          <%= clientUrl %>/auth/change
        </a>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div style="margin-top: 10px">
        Should you be unable to use the link above, simply copy and paste this
        link in your browser.
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div style="margin-top: 12px">
        <p
          style="margin: 0; color: #000; font-size: 1em; text-decoration: none"
        >
          <%= clientUrl %>/auth/change/<%= user.auth_reset.token
          %>?to=email&password
        </p>
      </div>
    </td>
  </tr>
</table>

<%- include('layouts/layout.bottom.ejs') %>
