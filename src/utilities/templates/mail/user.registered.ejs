<%- include('layouts/layout.top.ejs') %>

<table
  width="600px"
  class="table__main"
  align="center"
  cellpadding="0"
  cellspacing="0"
  bgcolor="white"
>
  <tr>
    <td>
      <table width="100%">
        <tr>
          <td>
            <p
              style="
                margin: 0 0 9px 0;
                font-size: 1.1em;
                font-weight: bold;
                text-align: center;
              "
            >
              Verify Your Email
            </p>
          </td>
        </tr>
        <tr>
          <td>
            <div>
              Hello <%= user.first_name %>. Welcome once more to Dome. One more
              step and you can get started creating backups. Click the link
              below to verify your email.
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div style="margin: 7px 0 2px 0">
              <a
                href="<%= clientUrl %>/email/verify/<%= user.email_verification_token %>"
                style="color: #000; font-size: 1em"
              >
                <%= clientUrl %>/email/verify
              </a>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div style="margin-top: 5px">
              Should you be unable to use the link above, simply copy and paste
              this link in your browser to complete verification.
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <div style="margin-top: 4px">
              <p
                style="
                  margin: 0;
                  color: #000;
                  font-size: 1em;
                  text-decoration: none;
                "
              >
                <%= clientUrl %>/email/verify/<%= user.email_verification_token
                %>
              </p>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<%- include('layouts/layout.bottom.ejs') %>
